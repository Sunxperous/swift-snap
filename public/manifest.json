{
  "manifest_version": 2,
  "name": "Swift Snap",
  "version": "0.2.0",
  "description": "Snap and save your window positions",
  "icons": {
    "16": "icons/swift-snap-16.png",
    "48": "icons/swift-snap-48.png",
    "128": "icons/swift-snap-128.png"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/swift-snap-48.png",
    "default_title": "Swift Snap",
    "default_popup": "index.html"
  },
  "commands": {
    "swift-snap-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "Command+Shift+Left"
      },
      "description": "Swift Snap Left"
    },
    "swift-snap-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right",
        "mac": "Command+Shift+Right"
      },
      "description": "Swift Snap Right"
    },
    "swift-snap-up": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up",
        "mac": "Command+Shift+Up"
      },
      "description": "Swift Snap Up"
    },
    "swift-snap-down": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down",
        "mac": "Command+Shift+Down"
      },
      "description": "Swift Snap Down"
    }
  },
  "permissions": ["storage", "system.display"]
}
